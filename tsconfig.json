{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  
  // Custom compiler options
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  
  // Include additional files
  "include": [
    "**/*.ts",
    "**/*.vue",
    ".nuxt/nuxt.d.ts"
  ],
  
  // Exclude files
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
